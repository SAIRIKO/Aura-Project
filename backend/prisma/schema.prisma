generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String
  email       String     @unique
  password    String
  role        Role       @default(CONSUMER) // CONSUMER | PHARMACY | ADMIN
  address     String?
  createdAt   DateTime   @default(now())
  pharmacy    Pharmacy?  @relation("UserPharmacy")
  pharmacyId  Int?       @unique
  orders      Order[]
}

model Pharmacy {
  id          Int         @id @default(autoincrement())
  name        String
  cnpj        String       @unique
  address     String
  phone       String?
  approved    Boolean      @default(false)
  products    Product[]
  orders      Order[]
  createdAt   DateTime     @default(now())
  owner       User?        @relation("UserPharmacy", fields: [ownerId], references: [id])
  ownerId     Int?         @unique
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  category    String
  price       Float
  stock       Int          @default(0)
  imageUrl    String?
  pharmacy    Pharmacy     @relation(fields: [pharmacyId], references: [id])
  pharmacyId  Int
  orderItems  OrderItem[]
  createdAt   DateTime     @default(now())
}

model Order {
  id          Int          @id @default(autoincrement())
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
  pharmacy    Pharmacy     @relation(fields: [pharmacyId], references: [id])
  pharmacyId  Int
  status      OrderStatus  @default(PENDING)
  total       Float
  createdAt   DateTime     @default(now())
  items       OrderItem[]
  payment     Payment?
}

model OrderItem {
  id          Int       @id @default(autoincrement())
  order       Order     @relation(fields: [orderId], references: [id])
  orderId     Int
  product     Product   @relation(fields: [productId], references: [id])
  productId   Int
  quantity    Int
  price       Float
}

model Payment {
  id          Int          @id @default(autoincrement())
  order       Order        @relation(fields: [orderId], references: [id])
  orderId     Int          @unique
  method      String
  status      PaymentStatus @default(PENDING)
  transactionId String?
  createdAt   DateTime      @default(now())
}

enum Role {
  CONSUMER
  PHARMACY
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}
